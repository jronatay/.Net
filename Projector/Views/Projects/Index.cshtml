@model IEnumerable<Projector.Models.Project>

@{
    ViewBag.Title = "Index";
}

<div class="float-left">
<h2 class="headings">Other Task</h2>

<ul class="other-task">
    <li>@Html.ActionLink("Create Project", "Create")</li>
    <li>@Html.ActionLink("Create Person", "Create","Persons")</li>
</ul>
</div>
<div class="float-right">
<table class="proj-list">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.remarks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.budget)
        </th>
        <th colspan="2"> Tasks</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
           @Html.Raw( item.remarks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.budget)
        </td>
        <td>
            <form method="POST" action="Projects/assignments">      
                <input value="@item.id" name="id" type="hidden" />   
                <input type="submit" value="Assignments" class="link-button" />
            </form>
             
        </td>
        <td>
            <form method="POST" action="Projects/subproject">      
                <input value="@item.id" name="id" type="hidden" />   
                <input type="submit" value="Details" class="link-button" />
            </form>
             
        </td>
    </tr>
}

</table>
</div>
